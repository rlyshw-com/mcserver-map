FROM ubuntu:latest
LABEL Maintainer="rlyshw rlyshw@rlyshw.com"

RUN apt-get -y update
RUN apt-get -y install libgdiplus libc6-dev unzip wget
RUN wget https://github.com/papyrus-mc/papyruscs/releases/download/v0.5.1/papyruscs-dotnetcore-0.5.1-linux64.zip
RUN unzip *.zip
RUN chmod +x PapyrusCs

ENTRYPOINT ["PapyrusCs","-w data/World/"]
